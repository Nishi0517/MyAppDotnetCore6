

<div class="container p-3">
    <div class="col-3">

        <h1>List of Products</h1>
    </div>
    <div class="col-9">
        @*<a class="btn btn-primary" asp-action="Create" asp-controller="Category">Add new category</a>*@
        <button class="btn btn-info" onclick="location.href='@Url.Action("CreateUpdate", "Product")'">Add New Product</button>
        <a asp-action="CreateUpdate" asp-controller="Product" class="btn btn-success">Add in working condition</a>
    </div>
</div>
<table id="productTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>

</table>

@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/Product.js"></script>
}