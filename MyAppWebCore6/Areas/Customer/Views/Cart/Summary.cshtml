@model MyAppDotnetCore6.Models.ViewModels.CartVM
@using Microsoft.Extensions.Options

@inject IOptions<MyAppDotnetCore6.CommonHelper.StripeSettings> Stripe

<form method="post">
    <div class="row">
        <div class="col-md-8 mb-4">

            <div class="card mb-4">
                <div class="card-header py-3">
                    <h5 class="mb-0">Shipping details</h5>
                </div>
                <div class="card-body">
                    <form>
                        <!-- 2 column grid layout with text inputs for the first and last -->
                        <div class="row mb-4">
                            <div class="col">
                                <div class="form-outline">
                                    <input type="text" asp-for="@Model.OrderHeader.Name" class="form-control" />
                                    <label class="form-label" for="form7Example1">Name</label>
                                </div>
                            </div>

                            <!-- Number input -->
                            <div class="form-outline mb-4">
                                <input type="number" asp-for="@Model.OrderHeader.Phone" class="form-control" />
                                <label class="form-label" for="form7Example6">Phone</label>
                            </div>

                            <!-- Number input -->
                            <div class="form-outline mb-4">
                                <input type="text" asp-for="@Model.OrderHeader.Address" class="form-control" />
                                <label class="form-label" for="form7Example6">Address</label>
                            </div>

                            <!-- Number input -->
                            <div class="form-outline mb-4">
                                <input type="text" asp-for="@Model.OrderHeader.City" class="form-control" />
                                <label class="form-label" for="form7Example6">City</label>
                            </div>

                            <!-- Number input -->
                            <div class="form-outline mb-4">
                                <input type="text" asp-for="@Model.OrderHeader.State" class="form-control" />
                                <label class="form-label" for="form7Example6">State</label>
                            </div>
                            <!-- Number input -->
                            <div class="form-outline mb-4">
                                <input type="number" asp-for="@Model.OrderHeader.PostalCode" class="form-control" />
                                <label class="form-label" for="form7Example6">PostalCode</label>
                            </div>


                            @* <div class="col">
                            <div class="form-outline">
                            <input type="text" id="form7Example2" class="form-control" />
                            <label class="form-label" for="form7Example2">Last name</label>
                            </div>

                            </div>*@

                        </div>

                        <!-- Text input -->
                        @*<div class="form-outline mb-4">
                        <input type="text" id="form7Example3" class="form-control" />
                        <label class="form-label" for="form7Example3">Company name</label>
                        </div>*@



                        <!-- Email input -->
                        @* <div class="form-outline mb-4">
                        <input type="email" id="form7Example5" class="form-control" />
                        <label class="form-label" for="form7Example4">Email</label>
                        </div>*@

                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h5 class="mb-0">Summary</h5>
                </div>


                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var details in Model.ListOfCart)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Products
                                <span>@details.Product.Name</span>
                                <span>QTY: @details.Count</span>
                                <span>@(((details.Product.Price) * (details.Count)).ToString("c"))</span>

                            </li>


                        }

                        <li class="list-group-item d-flex justify-content-between align-">
                            <div>
                                <strong>Total amount</strong>
                                @*   <strong>
                                <p class="mb-0">(including VAT)</p>
                                </strong>*@
                            </div>
                            <span><strong>@Model.OrderHeader.OrderTotal.ToString("c")</strong></span>
                        </li>

                    </ul>

                    <button type="submit" class="btn btn-primary btn-lg btn-block">
                        Make purchase
                    </button>
                </div>

            </div>
        </div>

    </div>
</form>